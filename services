apiVersion: v1
kind: Service
metadata:
  name: my-node-app
  namespace: your-kubernetes-namespace
spec:
  selector:
    app: my-node-app
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
  type: NodePort

---

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: my-node-app-ingress
  namespace: your-kubernetes-namespace
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - host: your-external-ip
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: my-node-app
                port:
                  number: 8080
